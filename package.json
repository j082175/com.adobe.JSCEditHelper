{
  "name": "jsc-edit-helper",
  "version": "1.0.0",
  "description": "Adobe Premiere Pro CEP Extension for Sound Effects Management",
  "main": "index.html",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "tsc --watch --sourceMap",
    "clean": "rimraf js/*.js js/*.js.map",
    "prebuild": "npm run clean",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "adobe",
    "premiere-pro",
    "cep",
    "extension",
    "typescript",
    "sound-effects"
  ],
  "author": "JSCEditHelper Team",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/jsc-edit-helper"
  },
  "bugs": {
    "url": "https://github.com/your-username/jsc-edit-helper/issues"
  },
  "homepage": "https://github.com/your-username/jsc-edit-helper#readme"
}